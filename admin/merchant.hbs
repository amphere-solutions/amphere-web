<script>
  var count = document.getElementById("count");
  var len = document.getElementById("length");
  var pattern = document.getElementById("pattern");

  document.getElementById('coupans-button').onclick = function()
  {
      const genReq = new XMLHttpRequest();
      genReq.open('GET',`/u/coupans?len=${len.value}&count=${count.value}&pattern=${pattern.value}`,true);
      genReq.send();

      genReq.onreadystatechange = () => {
          if(genReq.readyState === 4 && genReq.status === 200){
              let gen = JSON.parse(genReq.response);
              if (gen.state === "SUCCESS")
              {
                  var coupans = gen.coupans;
                  for(var i=0;i<coupans.length;i++)
                  {
                      var div = document.createElement('div');
                      var text = document.createTextNode(coupans[i]);
                      div.appendChild(text);
                      document.getElementById('coupans-check').appendChild(div);
                  }
              }
          }
      }
  }
</script>
